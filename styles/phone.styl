#assignments .homework
  strong
    display: inline-block

  .deadline, .files
    width: auto

  .module > *
    display: block
    padding-bottom: 10px

  .files > *
    margin-right: 10px

#people
  ul
    display: block

  .person
    display: block
    width: auto
    flex-basis: auto
    margin-right: 0

    > img
      float: left
